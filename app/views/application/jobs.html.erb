<div class="container jobs-page">
  <%= render 'partials/jobappreceived' %>
  <%= render 'partials/searchbar' %>
  <%= render 'partials/flash' %>
  <br />      
  <%= render 'partials/filters' %>
  <%= render 'partials/totalresults' %>
<!----------- PRISMIC FRAGMENTS ---------->
<% @documents.each do |doc| %>
  <table class="table table-striped">
    <tr>
        <td><h2><%= doc.fragments["jobtitle"].as_html_safe(link_resolver()) %></h2>
        <div class="pay pull-right">$<%= doc.fragments["pay"].as_html_safe(link_resolver()) %>/hr</div>
        <h3><%= doc.fragments["location"].as_html_safe(link_resolver()) %></h3>
        <h4><%= doc.fragments["description"].as_html_safe(link_resolver()) %></h4>
        <%= image_tag("clock.jpg", :class => "clock") %><%= doc.fragments["hours"].as_html_safe(link_resolver()) %>
        <div><a class="btn job-apply-btn pull-right" data-toggle="modal" data-target="#job-modal-<%= doc.id %>">APPLY</a><a class="btn pull-right" data-toggle="modal" data-target="#appreceived-modal">test</a></div></td>
    </tr>
  </table>
   <!-- -------APPLY TO JOB MODAL ------------>
  <div id="job-modal-<%=doc.id%>" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <div type="button" class="close" data-dismiss="modal">X</div>
        </div>
        <div class="modal-body job-modal-body">
          <div class="container-fluid">
            <div class="row">
              <div class="col-sm-9 col-sm-offset-1">
                <h2 class="apply-to-job-title">APPLY</h2>
                <br /> 
                <div align="center">
                  <p class="applytojobmodal">Let us connect you to your next career opportunity.</p>
                    <%= simple_form_for @jobemail, remote: true do |f| %>
                    <%= f.label :Phone_number %>
                    <%= f.input :phone_number, :placeholder => '  (   )   -', :required => true, :label => '', :input_html => {:style => 'width: 250px'} %>
                    <%= f.input :additional_information, :placeholder => 'Availability, questions, concerns', :required => true, :label => 'Additional Information', :input_html => {:style => 'height: 100px'} %>
                    <%= f.hidden_field :first_name, :required => true, :value => current_user.first_name %>
                    <%= f.hidden_field :last_name, :required => true, :value => current_user.last_name %>
                    <%= f.hidden_field :email, :required => true, :value => current_user.email %>
                    <%= f.hidden_field :job_title, :required => true, :value =>  doc.fragments["jobtitle"].as_html_safe(link_resolver()) %>
                    <%= f.hidden_field :job_id, :required => true, :value =>  doc.id  %>
                    <div>
                      <div class="actions" class="btn-to-modal" data-toggle="modal" data-target="#appreceived-modal">
                        <%= f.button :submit, 'SUBMIT', :class=> "btn btn-custom btn-in-modals" %>
                      </div>
                      <!-- <div class="actions" class="btn-to-modal" data-toggle="modal" data-target="#updated-modal"> -->
                        <%#= f.submit "SAVE AND CONTINUE", class: "btn uploadprofile-btn" %>
                      <!-- </div> -->
                      <!-- <a class="btn pull-right" data-toggle="modal" data-target="#appreceived-modal">test</a> -->
                      <p class="assistance">For immediate assistance, please call 212-888-8888</p>
                    </div>
                  <% end %>
                </div>
                <br />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
  <%= paginate @documents %>
</div><!-- container jobs-page -->

