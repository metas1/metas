<!-- FORM TO APPLY FOR A NEW JOB MODAL-->
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
    <h2 class="login-title-modal-form">APPLY</h2>
    <p>Let us connect you to your next career opportunity.</p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
			<%= f.label :Phone_Number%><br />
			<%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "(  ) -", class: "form-control mb-2 mr-sm-2 mb-sm-0" %>
        </div>
        <br />
        <div class="field">
			<%= f.label :Additional_Information %><br />
			<%= f.password_field :password, autocomplete: "off", placeholder: "Availability, questions, concerns", class: "form-control mb-2 mr-sm-2 mb-sm-0" %>
        </div>

         <br /> 

        <div class="actions col-md-offset-2">
          <%= f.submit "SUBMIT", class: "btn btn-in-modals"  %>
        </div>
      <% end %>

      <br />
    </div>
  </div>
</div>