 <!-- ------- CONTACT US MODAL ------------>
<div id="contactus-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div type="button" class="close" data-dismiss="modal">X</div>
      </div>
      <div class="modal-body contactus-modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-11 col-sm-offset-0 col-xs-offset-0">
              <h2 class="contact-form-title">CONTACT US</h2>
              <br /> 
              <div align="center">
                <p>Get in touch with us with any questions or comments.</p>
                  <%= simple_form_for @contactform do |f| %>
                    <label>Name</label>
                    <%= f.input :first_name, :required => true, :placeholder => 'First Name', label: false, :input_html => { autocomplete: 'off', :style => 'width: 275px' } %>
                    <label>E-mail address</label>
                    <%= f.input :email, :required => true, :placeholder => 'Your Email', label: false, :input_html => { autocomplete: 'off', :style => 'width: 275px' } %>
                    <label>Phone Number</label>
                    <%= f.input :phone_number, :required => true, :placeholder => '(  ) -', label: false, :input_html => { autocomplete: 'off', :style => 'width: 275px' } %>
                    <label>Additional Information</label>
                    <%= f.input :body, :required => true, :placeholder => 'Availability, questions, concerns', label: false, :required => true, :input_html => {:style => 'height: 100px'}%>
                    <div>
                    <div class="col-lg-8 col-lg-offset-2">
                    <%= f.button :submit, 'SUBMIT', :class=> "btn btn-in-modals" %>
                    </div>
                    <div class="col-lg-12 col-lg-offset-0">
                    <p class="assistance">For immediate assistance, please call 510-200-8260</p>
                    </div>
                  </div>
                <% end %>
              </div>
              <br />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>