 <!-- ------- CONTACT US MODAL ------------>
<div id="contactus-modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <div type="button" class="close" data-dismiss="modal">X</div>
      </div>
      <div class="modal-body job-modal-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-9 col-sm-offset-1 col-xs-offset-0">
              <h2 class="apply-to-job-title">CONTACT US</h2>
              <br /> 
              <div align="center">
                <p>Learn about how to contribute to metas.</p>
                  <%= simple_form_for @contactform do |f| %>
                    <%= f.input :full_name, :required => true, :placeholder => 'Enter your full name', label: false, :input_html => { autocomplete: 'off' } %>
                    <%= f.input :email, :required => true, :placeholder => 'Enter your email', label: false, :input_html => { autocomplete: 'off' } %>
                    <%= f.input :body, :required => true, :placeholder => 'How can we help you?', label: false, :required => true, :input_html => {:style => 'height: 100px'}%>
                    <div>
                    <%= f.button :submit, 'SUBMIT', :class=> "btn btn-custom btn-in-modals sub-application-btn" %>
                    <p class="assistance">For immediate assistance, please call 212-888-8888</p>
                  </div>
                <% end %>
              </div>
              <br />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>