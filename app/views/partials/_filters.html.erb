
<div class="container-fluid">
  <div class="row" align="center">

    <div id="temp_display"></div>
    <form id="filters-form" action="/search" method="GET">
      <select class="type-filter">
        <option value="" type="text">Type of Employment</option>
        <option value="full time" type="text">Full-Time</option>
        <option value="part time" type="text">Part-Time</option>
        <option value="full time part time" type="text">Full-Time Part-Time</option>
        <option value="contract" type="text">Contract</option>
      </select>

      <select class="range-filter">
        <option value="" type="text">Income Range</option>
        <option value="5-10" type="text">$5 - $10</option>
        <option value="11-20" type="text">$11 - $20</option>
        <option value="21-30" type="text">$21 - $30</option>
        <option value="31-40" type="text">$31 - $40</option>
      </select>

      <select class="location-filter">
        <option value="" type="text">Location</option>
        <option value="new york" type="text">New York</option>
        <option value="california" type="text">California</option>
      </select>

      <button id="submit-filters" name="q" type="submit" value="submit" class="btn filter-search-btn">Go</button>
      <button class="btn filter-reset-btn" id="clear-filters" type="reset" value="Reset /" >Clear filters</button>
    </form> 
  </div>    
</div>