<%= render 'partials/profileupdated' %>
<div class="container editprofile">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, remote: true) do |f| %>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-xs-12">

        <!-- two buttons -->
          <div class="col-lg-12 col-md-12 col-xs-10 col-xs-offset-1">
            <h2 class="col-md-8 col-sm-6 col-xs-12">EDIT YOUR PROFILE</h2>
            <div class="actions" class="btn-to-modal" data-toggle="modal" data-target="#updated-modal">
              <%= f.submit "SAVE AND CONTINUE", class: "btn saveprofile-btn" %>
            </div>
          </div>  
          
          <!-- upload pic -->
          <div class="col-md-11 col-sm-12 col-xs-12 profile-pic">
            <div><%= image_tag @user.thumbnail.url(:large) %></div>
            <div class="btn uploadpic-btn">UPLOAD PROFILE PICTURE</div>
          </div>
     
    <%= devise_error_messages! %>

          <div class="profile-info col-lg-9 col-lg-offset-3  col-sm-10 col-xs-10 col-xs-offset-1">
              <div class="field">
                <%= f.file_field :thumbnail%>
              </div>

              <div class="field">
                <%= f.text_field :first_name, placeholder: "First name", class: "form-control mb-2 mr-sm-2 mb-sm-0" %>
              </div>

              <div class="field">
                <%= f.text_field :last_name, placeholder: "Last name", class: "form-control mb-2 mr-sm-2 mb-sm-0" %>
              </div>

              <div class="field">
                <%= f.email_field :email, placeholder: "Email", class: "form-control mb-2 mr-sm-2 mb-sm-0" %>
              </div>

          </div>
              <div class=" col-xs-10 col-xs-offset-1">

              <h2>EXPERIENCE</h2>

              <div class="field"> 
                  <h4>Tell us about yourself.</h4>
                  <%= f.text_area :about, placeholder: "Prompt", class: "form-control" %>
              </div>  

              <div class="field">
                <h4>Experience, Areas of Expertise, Certifications.</h4>
                <%= f.text_area :skills, placeholder: "Prompt", class: "form-control" %>
              </div>
            </div>

            <br />

        </div><!-- col-lg-12 col-md-12 -->

      </div><!-- row -->  

    </div><!-- main container for profil page -->
  <% end %>
<br />





