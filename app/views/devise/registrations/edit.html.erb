<div class="container editprofile">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <div class="col-md-12">
        <h1 class="pull-left">EDIT YOUR PROFILE</h1>
        <!-- <div class="btn btn-custom pull-right">SAVE AND CONTINUE</div> -->
      </div>  

      <div class="col-md-9 col-md-offset-3">
      <div class="col-md-offset-1"><%= image_tag @user.thumbnail.url(:large) %></div>
      <div class="btn btn-custom col-md-offset-1">UPLOAD PROFILE PICTURE</div>
      
        <%= devise_error_messages! %>
            <br />
            <div class="col-md-offset-1">
              <div class="field"><br />
                <%= f.file_field :thumbnail%>
              </div>

              <div class="field">
                <%= f.text_field :first_name, autofocus: true, placeholder: "First name" %>
              </div>

              <div class="field">
                <%= f.text_field :last_name, autofocus: true, placeholder: "Last name" %>
              </div>

              <div class="field">
                <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
              </div>
            </div>
      </div>

        <h3>EXPERIENCE</h3><br />

        <div class="field"> 
            <strong>Tell us about yourself.<strong><br />
            <%= f.text_area :about, autofocus: true, placeholder: "Start writing here...", class: "form-control" %>
        </div>  

        <div class="field">
          <strong>Experience, areas of expertise, certifications.<strong><br />
          <%= f.text_area :skills, autofocus: true, placeholder: "Tell us about your skills here...", class: "form-control" %>
        </div>


        <div class="field">
          <%= f.password_field :current_password, autocomplete: "off", placeholder: "Your Password" %> <i>(we need your current password to confirm your changes)</i>
        </div>

        <br />

        <div class="actions">
          <%= f.submit "SAVE AND CONTINUE", class: "btn btn-custom"%>
        </div>
      <% end %>

    </div>
  </div><!-- row -->
</div><!-- container -->
<br />