<!-- LOG IN FORM -->
<h2>Log In</h2>
<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Your email" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Your password" %>
        </div>

        <div class="actions">
          <%= f.submit "SIGN IN", class: "btn btn-in-modals"  %>
        </div>
      <% end %>

      <br />

      <%= render "devise/shared/links" %>

      <br />

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Not a METAS member? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      <% end -%>

      <%= link_to "Back", root_path %>
    </div>
  </div>
</div>