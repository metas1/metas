<!-- MODAL AND DEFAULT LOG IN FORM -->
<div class="container-fluid login-form">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-1">
    <h2 class="login-title-modal-form">SIGN IN</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "Your email", class: "form-control mb-2 mr-sm-2 mb-sm-0" %>
        </div>

        <div class="field">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Your password", class: "form-control mb-2 mr-sm-2 mb-sm-0" %>
        </div>

         <br /> 

        <div class="actions">
          <%= f.submit "SIGN IN", class: "btn btn-in-modals btn-block"  %>
        </div>
      <% end %>

      <br />

      <%= render "devise/shared/links" %>

      <br />

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        Not a METAS member? <%= link_to "Sign up", new_registration_path(resource_name) %><br />
      <% end -%>

      <%= link_to "Back", root_path %>
    </div>
  </div>
</div>