<%= render 'partials/previewNavbar' %>
<div class="container-fluid holder">
	<div class="row">
  		<div class="col-md-4 col-md-offset-4 col-sm-9 col-sm-offset-1">
			<h2>Forgot your password?</h2>
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true %>
			  </div>

			  <div class="actions">
			    <%= f.submit "Send me reset password instructions", class: "btn btn-md"  %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
